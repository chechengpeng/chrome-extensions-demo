{
    "manifest_version": 2,

    "name": "Do Not indulge in some sites",
    "description": "This extension show how many times you indulge in some useless sites in your work",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}