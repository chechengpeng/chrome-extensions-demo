{
  "manifest_version": 2,
  "name": "Sites statistics",
  "description": "Sites statistics base on history",
  "version": "1.0",

  "browser_action": {
    "default_icon": "panda.png"
  },
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "history",
    "bookmarks"
  ]
}